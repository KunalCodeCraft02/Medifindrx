<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Account</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.9.0/fonts/remixicon.css" rel="stylesheet" />

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: linear-gradient(135deg, #e3f2fd, #ffffff);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 5vw;
        }

        .form-box {
            width: 380px;
            background: white;
            padding: 35px 30px;
            border-radius: 18px;
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.1);
        }

        .title {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 6px;
            text-align: center;
        }

        .subtitle {
            text-align: center;
            font-size: 14px;
            color: #666;
            margin-bottom: 25px;
        }

        .input-group {
            margin-bottom: 16px;
        }

        .input-group label {
            font-size: 13px;
            font-weight: 600;
            margin-bottom: 5px;
            display: block;
            color: #444;
        }

        .input {
            width: 100%;
            padding: 11px 14px;
            border-radius: 8px;
            border: 1px solid #ddd;
            font-size: 14px;
            outline: none;
            transition: 0.3s;
        }

        .input:focus {
            border-color: #007bff;
            box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
        }

        .password-box {
            position: relative;
        }

        .password-box i {
            position: absolute;
            right: 12px;
            top: 50%;
            transform: translateY(-50%);
            cursor: pointer;
            color: #888;
        }

        button {
            width: 100%;
            padding: 12px;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 25px;
            font-size: 15px;
            font-weight: 600;
            cursor: pointer;
            transition: 0.3s;
            margin-top: 10px;
        }

        button:hover {
            background: #005ce6;
        }

        .form-footer {
            text-align: center;
            margin-top: 18px;
            font-size: 13px;
        }

        .form-footer a {
            color: #007bff;
            font-weight: 600;
            text-decoration: none;
        }

        .error {
            color: red;
            font-size: 12px;
            margin-top: 4px;
        }
    </style>
</head>

<body>

    <div class="form-box">
        <form class="form" action="/signin" method="POST">

            <div class="title">Create Account</div>
            <div class="subtitle">Sign up to get started</div>

            <div class="input-group">
                <label>Full Name</label>
                <input name="name" type="text" class="input" required>
            </div>

            <div class="input-group">
                <label>Email</label>
                <input name="email" type="email" class="input" required>
            </div>

            <div class="input-group">
                <label>Date of Birth</label>
                <input name="dob" type="date" class="input" required>
            </div>

            <div class="input-group">
                <label>Blood Group</label>
                <select name="bloodgroup" class="input" required>
                    <option value="">Select Blood Group</option>
                    <option>A+</option>
                    <option>A-</option>
                    <option>B+</option>
                    <option>B-</option>
                    <option>O+</option>
                    <option>O-</option>
                    <option>AB+</option>
                    <option>AB-</option>
                </select>
            </div>

            <div class="input-group">
                <label>Phone Number</label>
                <input name="phonenumber" type="tel" class="input" pattern="[0-9]{10}" maxlength="10" required>
            </div>

            <div class="input-group password-box">
                <label>Password</label>
                <input name="password" type="password" class="input" id="password" required>
                <i class="ri-eye-line" onclick="togglePassword('password',this)"></i>
            </div>

            <div class="input-group password-box">
                <label>Confirm Password</label>
                <input name="confirmpassword" type="password" class="input" id="confirmPassword" required>
                <i class="ri-eye-line" onclick="togglePassword('confirmPassword',this)"></i>
            </div>

            <div class="error" id="errorMsg"></div>

            <button type="submit">Sign Up</button>

        </form>

        <div class="form-footer">
            Already have an account? <a href="/login">Login</a>
        </div>
    </div>

    <script>
        function togglePassword(id, icon) {
            const input = document.getElementById(id);
            if (input.type === "password") {
                input.type = "text";
                icon.classList.remove("ri-eye-line");
                icon.classList.add("ri-eye-off-line");
            } else {
                input.type = "password";
                icon.classList.remove("ri-eye-off-line");
                icon.classList.add("ri-eye-line");
            }
        }

        document.querySelector(".form").addEventListener("submit", function (e) {
            const pass = document.getElementById("password").value;
            const confirm = document.getElementById("confirmPassword").value;
            const error = document.getElementById("errorMsg");

            if (pass !== confirm) {
                error.textContent = "Passwords do not match";
                e.preventDefault();
            }
        });
    </script>

</body>

</html>