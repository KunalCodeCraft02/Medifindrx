<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Waiting for Approval</title>

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
        }

        body {
            background: #ffffff;
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
            color: #000;
        }

        .card {
            background: #fff;
            padding: 45px;
            border-radius: 18px;
            width: 420px;
            text-align: center;
            box-shadow: 0 20px 50px rgba(0, 0, 0, 0.15);
        }

        .card h2 {
            font-weight: 700;
            font-size: 26px;
            margin-bottom: 10px;
        }

        .card p {
            font-size: 15px;
            color: #555;
            margin-bottom: 25px;
        }

        .loader {
            width: 70px;
            height: 70px;
            border: 6px solid #eee;
            border-top: 6px solid #ef4444;
            border-radius: 50%;
            margin: 0 auto 25px;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            100% {
                transform: rotate(360deg);
            }
        }

        .countdown {
            font-size: 24px;
            font-weight: 700;
            margin-top: 10px;
            color: #ef4444;
        }

        .status {
            margin-top: 18px;
            font-size: 16px;
            font-weight: 600;
            color: #111;
        }
    </style>
</head>

<body>

    <div class="card">

        <div class="loader" id="loader"></div>

        <h2>Waiting for Pharmacy Response</h2>
        <p>Please wait while pharmacy checks your request</p>

        <div class="countdown">
            Time left: <span id="timer">90</span>s
        </div>

        <div class="status" id="statusText">
            Checking pharmacy response...
        </div>

    </div>

    <script>

        let timeLeft = 90;

        const timerEl = document.getElementById("timer");
        const statusText = document.getElementById("statusText");
        const loader = document.getElementById("loader");

        const orderId = "<%= orderId %>";

        // LAT LNG FROM BACKEND
        const shopLat = "<%= lat %>";
        const shopLng = "<%= lng %>";

        console.log("LAT:", shopLat);
        console.log("LNG:", shopLng);

        // countdown
        let countdown = setInterval(() => {
            timeLeft--;
            timerEl.innerText = timeLeft;

            if (timeLeft <= 0) {
                clearInterval(countdown);
                loader.style.display = "none";
                statusText.innerHTML = "Pharmacy did not respond";

                setTimeout(() => {
                    window.location = "/home";
                }, 2000);
            }

        }, 1000);


        // check status
        async function checkStatus() {

            try {

                const res = await fetch(`/check-status/${orderId}`);
                const data = await res.json();

                // APPROVED
                if (data.status === "approved") {

                    clearInterval(countdown);
                    loader.style.display = "none";

                    statusText.innerHTML = "Pharmacy Approved! Opening map...";

                    setTimeout(() => {

                        const mapLink =
                            `https://www.google.com/maps/dir/?api=1&destination=${shopLat},${shopLng}&travelmode=driving`;

                        window.location.href = mapLink;

                    }, 1500);
                }

                // REJECT
                if (data.status === "rejected") {
                    clearInterval(countdown);
                    loader.style.display = "none";
                    statusText.innerHTML = "Pharmacy rejected request";

                    setTimeout(() => window.location = "/home?next=1", 2000);
                }

                // TIMEOUT
                if (data.status === "timeout") {
                    clearInterval(countdown);
                    loader.style.display = "none";
                    statusText.innerHTML = "Pharmacy did not respond";

                    setTimeout(() => window.location = "/home", 2000);
                }

            } catch (err) {
                console.log(err);
            }

        }

        setInterval(checkStatus, 3000);

    </script>
</body>

</html>